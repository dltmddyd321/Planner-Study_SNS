<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0E3C4">


    <ImageView
        android:id="@+id/calendar"
        android:layout_width="72dp"
        android:layout_height="47dp"
        android:layout_marginTop="43dp"
        app:layout_constraintEnd_toStartOf="@+id/setting"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dpmemo" />


    <TextView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/godom"
        android:text="설정"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_info"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_los"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/godom"
        android:text="계정설정"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="303dp"
        android:layout_height="45dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/godom"
        android:gravity="center_vertical"
        android:text="개인정보 설정"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_los"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_perinfo"
        android:layout_width="304dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/godom"
        android:gravity="center_vertical"
        android:text="회원정보 설정"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/tv_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_info" />

    <TextView
        android:id="@+id/tv_alalog"
        android:layout_width="118dp"
        android:layout_height="21dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/godom"
        android:text="알람 및 로그인 여부"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_info2"
        app:layout_constraintStart_toStartOf="@+id/tv_los"
        app:layout_constraintTop_toBottomOf="@+id/tv_perinfo" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_info2"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        app:layout_constraintVertical_bias="0.906" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="166dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/switch2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/switch2"
        app:layout_constraintTop_toBottomOf="@+id/tv_perinfo"
        app:layout_constraintVertical_bias="0.691" />

    <TextView
        android:id="@+id/tv_info2"
        android:layout_width="304dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/godom"
        android:gravity="center_vertical"
        android:text="알람여부 설정"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_info3"
        app:layout_constraintStart_toStartOf="@+id/tv_perinfo"
        app:layout_constraintTop_toBottomOf="@+id/tv_alalog" />

    <TextView
        android:id="@+id/tv_info3"
        android:layout_width="304dp"
        android:layout_height="43dp"
        android:layout_marginBottom="152dp"
        android:fontFamily="@font/godom"
        android:gravity="center_vertical"
        android:text="자동 로그인 설정"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_info2"
        app:layout_constraintTop_toBottomOf="@+id/tv_info2" />

    <Button
        android:id="@+id/btn_updateUserInfo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right" />

    <Button
        android:id="@+id/btn_updatePersonInfo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/tv_info"
        app:layout_constraintTop_toBottomOf="@+id/btn_updateUserInfo"
        app:srcCompat="@drawable/right" />


</androidx.constraintlayout.widget.ConstraintLayout>